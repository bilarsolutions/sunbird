%h1
  = @recipe.title

%p
  = @recipe.description

%p
  %strong Prep:
  = @recipe.prep
%p
  %strong Cook:
  = @recipe.cook
%p
  %strong Servings:
  = @recipe.servings


%h2 Ingredients

%ul
  - @recipe.ingredients.each do |ingredient|
    %li= ingredient.name

%h2 Directions

- @recipe.steps.each do |step|
  %h3 Step #{step.position}

  %p= step.description


= link_to 'Edit', edit_recipe_path(@recipe)
|
= link_to 'Back', recipes_path
