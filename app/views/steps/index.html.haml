%h1 Listing steps

%table
  %thead
    %tr
      %th Recipe
      %th Position
      %th Description
      %th
      %th
      %th

  %tbody
    - @steps.each do |step|
      %tr
        %td= step.recipe
        %td= step.position
        %td= step.description
        %td= link_to 'Show', step
        %td= link_to 'Edit', edit_step_path(step)
        %td= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' }

